      "path": "ui/acf-integration.tsx",
      "content": "\"use client\"\n\nimport * as React from \"react\"\nimport { Card, CardContent, CardDescription, CardHeader, CardTitle } from \"@/components/ui/card\"\nimport { Badge } from \"@/components/ui/badge\"\nimport { Tabs, TabsContent, TabsList, TabsTrigger } from \"@/components/ui/tabs\"\nimport { Button } from \"@/components/ui/button\"\nimport { Copy, ExternalLink } from \"lucide-react\"\n\ninterface ACFIntegrationProps {\n  fieldType?: string\n  fieldName?: string\n  title?: string\n  description?: string\n}\n\nconst ACFIntegration = React.forwardRef<HTMLDivElement, ACFIntegrationProps>(\n  ({ fieldType = \"relationship\", fieldName = \"related_posts\", title = \"ACF Integration\", description = \"Advanced Custom Fields integration examples and configuration\" }, ref) => {\n    const [copiedSection, setCopiedSection] = React.useState<string | null>(null)\n\n    const copyToClipboard = (text: string, section: string) => {\n      navigator.clipboard.writeText(text)\n      setCopiedSection(section)\n      setTimeout(() => setCopiedSection(null), 2000)\n    }\n\n    const fieldConfigPHP = `// ACF Field Configuration\n'${fieldName}' => array(\n    'label' => 'Related Posts',\n    'name' => '${fieldName}',\n    'type' => '${fieldType}',\n    'post_type' => array('post', 'page'),\n    'taxonomy' => array('category', 'post_tag'),\n    'filters' => array('search', 'post_type', 'taxonomy'),\n    'elements' => array('featured_image'),\n    'min' => 0,\n    'max' => 5,\n    'return_format' => 'id',\n)`\n\n    const templateUsagePHP = `<?php \n$${fieldName} = get_field('${fieldName}');\nif( $${fieldName} ): ?>\n    <section class=\"related-posts\">\n        <h3>Related Articles</h3>\n        <div class=\"post-grid\">\n        <?php foreach( $${fieldName} as $post_id ): ?>\n            <article>\n                <h4><?php echo get_the_title($post_id); ?></h4>\n                <p><?php echo get_the_excerpt($post_id); ?></p>\n                <a href=\"<?php echo get_permalink($post_id); ?>\">Read More</a>\n            </article>\n        <?php endforeach; ?>\n        </div>\n    </section>\n<?php endif; ?>`\n\n    const reactIntegration = `// React/TypeScript Integration\nimport { Relationship } from \"@/components/ui/relationship\"\n\nconst [${fieldName}, set${fieldName.charAt(0).toUpperCase() + fieldName.slice(1)}] = useState([])\n\n<Relationship\n  onLoad={async (filter) => {\n    const response = await fetch('/wp-json/wp/v2/posts', {\n      method: 'GET',\n      headers: { 'Content-Type': 'application/json' }\n    })\n    return response.json()\n  }}\n  selectedItems={${fieldName}}\n  onChange={set${fieldName.charAt(0).toUpperCase() + fieldName.slice(1)}}\n  postTypes={[\"post\", \"page\", \"product\"]}\n  taxonomies={[\"category\", \"post_tag\", \"product_cat\"]}\n  showExcerpt={true}\n  showFeaturedImage={true}\n  max={5}\n/>`\n\n    return (\n      <div ref={ref} className=\"w-full space-y-6\">\n        <Card>\n          <CardHeader>\n            <div className=\"flex items-center justify-between\">\n              <div>\n                <CardTitle className=\"flex items-center gap-2\">\n                  {title}\n                  <Badge variant=\"outline\">ACF</Badge>\n                </CardTitle>\n                <CardDescription>{description}</CardDescription>\n              </div>\n              <Button variant=\"outline\" size=\"sm\" asChild>\n                <a \n                  href=\"https://www.advancedcustomfields.com/resources/relationship/\" \n                  target=\"_blank\" \n                  rel=\"noopener noreferrer\"\n                  className=\"flex items-center gap-2\"\n                >\n                  <ExternalLink className=\"h-4 w-4\" />\n                  ACF Docs\n                </a>\n              </Button>\n            </div>\n          </CardHeader>\n          <CardContent>\n            <Tabs defaultValue=\"field-config\" className=\"w-full\">\n              <TabsList className=\"grid w-full grid-cols-3\">\n                <TabsTrigger value=\"field-config\">Field Configuration</TabsTrigger>\n                <TabsTrigger value=\"template-usage\">Template Usage</TabsTrigger>\n                <TabsTrigger value=\"react-integration\">React Integration</TabsTrigger>\n              </TabsList>\n              \n              <TabsContent value=\"field-config\" className=\"space-y-4\">\n                <div className=\"space-y-2\">\n                  <div className=\"flex items-center justify-between\">\n                    <h4 className=\"text-sm font-medium\">PHP Field Configuration</h4>\n                    <Button\n                      variant=\"ghost\"\n                      size=\"sm\"\n                      onClick={() => copyToClipboard(fieldConfigPHP, 'field-config')}\n                      className=\"h-8 w-8 p-0\"\n                    >\n                      <Copy className=\"h-4 w-4\" />\n                      <span className=\"sr-only\">Copy configuration</span>\n                    </Button>\n                  </div>\n                  <pre className=\"rounded-lg border bg-muted p-4 text-sm overflow-x-auto\">\n                    <code>{fieldConfigPHP}</code>\n                  </pre>\n                  {copiedSection === 'field-config' && (\n                    <p className=\"text-sm text-green-600\">Configuration copied to clipboard!</p>\n                  )}\n                </div>\n                \n                <div className=\"space-y-2\">\n                  <h4 className=\"text-sm font-medium\">Configuration Options</h4>\n                  <div className=\"grid gap-2 text-sm\">\n                    <div className=\"flex justify-between\">\n                      <span className=\"font-medium\">post_type:</span>\n                      <span className=\"text-muted-foreground\">Filter by post types</span>\n                    </div>\n                    <div className=\"flex justify-between\">\n                      <span className=\"font-medium\">taxonomy:</span>\n                      <span className=\"text-muted-foreground\">Filter by taxonomy terms</span>\n                    </div>\n                    <div className=\"flex justify-between\">\n                      <span className=\"font-medium\">filters:</span>\n                      <span className=\"text-muted-foreground\">Available filter options</span>\n                    </div>\n                    <div className=\"flex justify-between\">\n                      <span className=\"font-medium\">elements:</span>\n                      <span className=\"text-muted-foreground\">Display elements</span>\n                    </div>\n                    <div className=\"flex justify-between\">\n                      <span className=\"font-medium\">return_format:</span>\n                      <span className=\"text-muted-foreground\">Object or ID format</span>\n                    </div>\n                  </div>\n                </div>\n              </TabsContent>\n              \n              <TabsContent value=\"template-usage\" className=\"space-y-4\">\n                <div className=\"space-y-2\">\n                  <div className=\"flex items-center justify-between\">\n                    <h4 className=\"text-sm font-medium\">WordPress Template Usage</h4>\n                    <Button\n                      variant=\"ghost\"\n                      size=\"sm\"\n                      onClick={() => copyToClipboard(templateUsagePHP, 'template-usage')}\n                      className=\"h-8 w-8 p-0\"\n                    >\n                      <Copy className=\"h-4 w-4\" />\n                      <span className=\"sr-only\">Copy template code</span>\n                    </Button>\n                  </div>\n                  <pre className=\"rounded-lg border bg-muted p-4 text-sm overflow-x-auto\">\n                    <code>{templateUsagePHP}</code>\n                  </pre>\n                  {copiedSection === 'template-usage' && (\n                    <p className=\"text-sm text-green-600\">Template code copied to clipboard!</p>\n                  )}\n                </div>\n                \n                <div className=\"space-y-2\">\n                  <h4 className=\"text-sm font-medium\">Template Functions</h4>\n                  <div className=\"grid gap-2 text-sm\">\n                    <div className=\"flex justify-between\">\n                      <span className=\"font-medium\">get_field():</span>\n                      <span className=\"text-muted-foreground\">Retrieve field value</span>\n                    </div>\n                    <div className=\"flex justify-between\">\n                      <span className=\"font-medium\">get_the_title():</span>\n                      <span className=\"text-muted-foreground\">Get post title</span>\n                    </div>\n                    <div className=\"flex justify-between\">\n                      <span className=\"font-medium\">get_the_excerpt():</span>\n                      <span className=\"text-muted-foreground\">Get post excerpt</span>\n                    </div>\n                    <div className=\"flex justify-between\">\n                      <span className=\"font-medium\">get_permalink():</span>\n                      <span className=\"text-muted-foreground\">Get post URL</span>\n                    </div>\n                  </div>\n                </div>\n              </TabsContent>\n              \n              <TabsContent value=\"react-integration\" className=\"space-y-4\">\n                <div className=\"space-y-2\">\n                  <div className=\"flex items-center justify-between\">\n                    <h4 className=\"text-sm font-medium\">React Component Integration</h4>\n                    <Button\n                      variant=\"ghost\"\n                      size=\"sm\"\n                      onClick={() => copyToClipboard(reactIntegration, 'react-integration')}\n                      className=\"h-8 w-8 p-0\"\n                    >\n                      <Copy className=\"h-4 w-4\" />\n                      <span className=\"sr-only\">Copy React code</span>\n                    </Button>\n                  </div>\n                  <pre className=\"rounded-lg border bg-muted p-4 text-sm overflow-x-auto\">\n                    <code>{reactIntegration}</code>\n                  </pre>\n                  {copiedSection === 'react-integration' && (\n                    <p className=\"text-sm text-green-600\">React code copied to clipboard!</p>\n                  )}\n                </div>\n                \n                <div className=\"space-y-2\">\n                  <h4 className=\"text-sm font-medium\">Integration Benefits</h4>\n                  <div className=\"grid gap-2 text-sm\">\n                    <div className=\"flex items-start gap-2\">\n                      <span className=\"w-2 h-2 rounded-full bg-green-500 mt-2 shrink-0\"></span>\n                      <span>Headless CMS compatibility with WordPress REST API</span>\n                    </div>\n                    <div className=\"flex items-start gap-2\">\n                      <span className=\"w-2 h-2 rounded-full bg-green-500 mt-2 shrink-0\"></span>\n                      <span>TypeScript support for better development experience</span>\n                    </div>\n                    <div className=\"flex items-start gap-2\">\n                      <span className=\"w-2 h-2 rounded-full bg-green-500 mt-2 shrink-0\"></span>\n                      <span>Modern React patterns with hooks and async data loading</span>\n                    </div>\n                    <div className=\"flex items-start gap-2\">\n                      <span className=\"w-2 h-2 rounded-full bg-green-500 mt-2 shrink-0\"></span>\n                      <span>Consistent UI/UX across traditional and headless WordPress sites</span>\n                    </div>\n                  </div>\n                </div>\n              </TabsContent>\n            </Tabs>\n          </CardContent>\n        </Card>\n      </div>\n    )\n  }\n)\nACFIntegration.displayName = \"ACFIntegration\"\n\nexport { ACFIntegration } ",
      "type": "registry:ui",
      "target": ""
    }
  ]
}